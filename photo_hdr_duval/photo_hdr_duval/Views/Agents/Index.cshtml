@model IEnumerable<photo_hdr_duval.Models.Agent>
@{
    ViewBag.Title = "Index";
    bool futureAsc = ViewBag.isAsc != null ? !ViewBag.isAsc : false;
    string arrow = futureAsc ? "▲" : "▼";
}

<h2>Agents</h2>

<p>
    @Html.ActionLink("Créer un nouveau", "Create")
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Nom" + (ViewBag.orderBy == "NomAgent" ? arrow : ""), "Index", new { sortString = "NomAgent", asc = futureAsc })
            </th>
            <th>
                @Html.ActionLink("Prénom" + (ViewBag.orderBy == "PrenomAgent" ? arrow : ""), "Index", new { sortString = "PrenomAgent", asc = futureAsc })
            </th>
            <th>
                @Html.ActionLink("Entreprise" + (ViewBag.orderBy == "NomEntreprise" ? arrow : ""), "Index", new { sortString = "NomEntreprise", asc = futureAsc })
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.Adresse) + (ViewBag.orderBy == "Adresse" ? arrow : ""), "Index", new { sortString = "Adresse", asc = futureAsc })
            </th>
            <th>
                @Html.ActionLink("Téléphone 1" + (ViewBag.orderBy == "TelPrincipal" ? arrow : ""), "Index", new { sortString = "TelPrincipal", asc = futureAsc })
            </th>
            <th>
                @Html.ActionLink("Téléphone 2" + (ViewBag.orderBy == "TelSecondaire" ? arrow : ""), "Index", new { sortString = "TelSecondaire", asc = futureAsc })
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomAgent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomAgent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomEntreprise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelPrincipal)
            </td>
            <td>
                @if (item.TelSecondaire > 0)
                {
                    Html.DisplayFor(modelItem => item.TelSecondaire);
                }
                else
                {
                    <text>N/D</text>
                }
                    
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.AgentID }) |
                @Html.ActionLink("Détails", "Details", new { id = item.AgentID }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.AgentID })
            </td>
        </tr>
    }

</table>
