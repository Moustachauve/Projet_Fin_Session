@model IEnumerable<photo_hdr_duval.Models.RDV>

@{
    ViewBag.Title = "IndexTableHeaderRDVs";
    bool futureAsc = ViewBag.isAsc != null ? !ViewBag.isAsc : false;
    string arrow = futureAsc ? "▲" : "▼";
}

<thead>
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.DateDemande) + (ViewBag.orderBy == "DateDemande" ? arrow : ""), ViewContext.RouteData.Values["action"].ToString(), new { sortString = "DateDemande", asc = futureAsc })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.DateRDV) + (ViewBag.orderBy == "DateRdv" ? arrow : ""), ViewContext.RouteData.Values["action"].ToString(), new { sortString = "DateRdv", asc = futureAsc })
        </th>
        <th>
            @Html.ActionLink("Nom et prénom du propriétaire" + (ViewBag.orderBy == "NomProprietaire" ? arrow : ""), ViewContext.RouteData.Values["action"].ToString(), new { sortString = "NomProprietaire", asc = futureAsc })
        </th>
        <th class="th-statut">
            @Html.ActionLink("Status" + (ViewBag.orderBy == "Status" ? arrow : ""),ViewContext.RouteData.Values["action"].ToString(), new { sortString = "Status", asc = futureAsc })
        </th>
        <th></th>
    </tr>
</thead>

