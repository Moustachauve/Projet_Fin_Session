@model IEnumerable<photo_hdr_duval.Models.RDV>

@{
    ViewBag.Title = "Index";
    bool futureAsc = ViewBag.isAsc != null ? !ViewBag.isAsc : false;
    string arrow = futureAsc ? "▲" : "▼";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Ajouter un Rendez-vous", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.DateDemande).ToString() + (ViewBag.sortString == "DateDemande" ? arrow : ""), "Index", new { sortString = "DateDemande" });
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.DateRDV).ToString() + (ViewBag.sortString == "DateRdv" ? arrow : ""), "Index", new { sortString = "DateRdv" });
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.HeureRDV).ToString() + (ViewBag.sortString == "HeureRdv" ? arrow : ""), "Index", new { sortString = "HeureRdv" });
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.NomPrenomProprietaire).ToString() + (ViewBag.sortString == "NomPrenom" ? arrow : ""), "Index", new { sortString = "NomPrenom" });
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateDemande)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateRDV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeureRDV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomPrenomProprietaire)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.RDVID }) |
            @Html.ActionLink("Détails", "Details", new { id=item.RDVID }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.RDVID })
        </td>
    </tr>
}

</table>
