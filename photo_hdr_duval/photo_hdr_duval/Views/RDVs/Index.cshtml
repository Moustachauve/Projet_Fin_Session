@model IEnumerable<photo_hdr_duval.Models.RDV>

@{
    ViewBag.Title = "Index";
    bool futureAsc = ViewBag.isAsc != null ? !ViewBag.isAsc : false;
    string arrow = futureAsc ? "▲" : "▼";
}

<h2>Index @Html.ActionLink("Demander un rendez-vous", "Create", "RDVs", null, new { @class = "btn btn-success pull-right" })</h2>

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>
				@Html.ActionLink(Html.DisplayNameFor(model => model.DateDemande) + (ViewBag.orderBy == "DateDemande" ? arrow : ""), "Index", new { sortString = "DateDemande", asc = futureAsc })
			</th>
			<th>
				@Html.ActionLink(Html.DisplayNameFor(model => model.DateRDV) + (ViewBag.orderBy == "DateRdv" ? arrow : ""), "Index", new { sortString = "DateRdv", asc = futureAsc })
			</th>
			<th>
				@Html.ActionLink("Nom et prénom du propriétaire" + (ViewBag.orderBy == "NomProprietaire" ? arrow : ""), "Index", new { sortString = "NomProprietaire", asc = futureAsc })
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.DateDemande)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateRDV) @Html.DisplayFor(modelItem => item.HeureRDV)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.NomProprietaire), @Html.DisplayFor(modelItem => item.PrenomProprietaire)
				</td>
				<td class="text-right">
					<div class="btn-group">
						@Html.ActionLink("Détails", "Details", new { id = item.RDVID }, new { @class = "btn btn-primary btn-sm" })
						@Html.ActionLink("Modifier", "Edit", new { id = item.RDVID }, new { @class = "btn btn-primary btn-sm" })
						@Html.ActionLink("Supprimer", "Delete", new { id = item.RDVID }, new { @class = "btn btn-danger btn-sm" })
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

