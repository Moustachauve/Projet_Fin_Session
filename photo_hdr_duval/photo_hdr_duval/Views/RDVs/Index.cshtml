@model PagedList.IPagedList<photo_hdr_duval.Models.RDV>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Gestion des rendez-vous demandé";
    bool futureAsc = ViewBag.isAsc != null ? !ViewBag.isAsc : false;
    string arrow = futureAsc ? "▲" : "▼";
}

<h2>
    Liste de Rendez-vous

    @Html.ActionLink("Ajouter un rendez-vous", "Create", "RDVs", null, new { @class = "btn btn-success pull-right" })

    <div class="filter small">
        @using (@Html.BeginForm("Index", "RDVs", FormMethod.Get, new { @class = "form-inline" }))
        {
            <input name="isAsc" value="@ViewBag.isAsc" type="hidden" />
            <input name="orderBy" value="@ViewBag.orderBy" type="hidden" />

            <label for="statutSelect" class="control-label">Filtre par statut: </label>
            <select name="Statut" id="statutSelect" onchange="this.form.submit()" class="form-control">
                <option value="">Tous</option>
                <option value="Demandée" @if (ViewBag.Statut == "Demandée") { <text> selected</text> }>Demandée</option>
                <option value="Confirmée" @if (ViewBag.Statut == "Confirmée") { <text> selected</text> }>Confirmée</option>
                <option value="Reportée" @if (ViewBag.Statut == "Reportée") { <text> selected</text> }>Reportée</option>
                <option value="Réalisée" @if (ViewBag.Statut == "Réalisée") { <text> selected</text> }>Réalisée</option>
                <option value="Livrée" @if (ViewBag.Statut == "Livrée") { <text> selected</text> }>Livrée</option>
                <option value="Facturée" @if (ViewBag.Statut == "Facturée") { <text> selected</text> }>Facturée</option>
            </select>
        }
    </div>
</h2>

<table class="table table-hover table-striped">
    @Html.Partial("../Shared/IndexTableHeaderRDVs")
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @Html.Partial("../Shared/IndexTableDataRDVs", item)
                <td class="text-right th-buttons">
                    <div class="btn-group">
                        @Html.ActionLink("Détails", "Details", new { id = item.RDVID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Modifier", "Edit", new { id = item.RDVID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Supprimer", "Delete", new { id = item.RDVID }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.PageCount > 1)
{
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, sortString = ViewBag.orderBy, asc = ViewBag.isAsc }))
    <text>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) sur @Model.PageCount</text>
}