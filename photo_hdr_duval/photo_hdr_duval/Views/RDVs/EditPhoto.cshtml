@model photo_hdr_duval.Models.PhotoPropriete

@{
    ViewBag.Title = "EditPhoto";
    string chemin = @Url.Content("~/Images/" + Model.Url);
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.PhotoProprieteID)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PhotoProprieteID)

        <div class="form-group">
            <div class="col-md-6 col-md-offset-2">
                <img src="@chemin" alt="Image" class="img-responsive" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionPhoto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DescriptionPhoto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescriptionPhoto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 btn-group">
                @Html.ActionLink("Annuler", "Details", new { id= Model.RDVID }, new { @class = "btn btn-default" })
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
