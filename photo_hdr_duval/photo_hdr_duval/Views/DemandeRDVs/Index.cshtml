@model IEnumerable<photo_hdr_duval.Models.RDV>

@{
    ViewBag.Title = "Index";
    bool futureAsc = ViewBag.isAsc != null ? !ViewBag.isAsc : false;
    string arrow = futureAsc ? "▲" : "▼";
}

<h2>Liste de Rendez-vous</h2>

<p>
    @Html.ActionLink("Créer un nouveau", "Create")
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.DateDemande) + (ViewBag.orderBy == "DateDemande" ? arrow : ""), "Index", new { sortString = "DateDemande", asc = futureAsc })
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.DateRDV) + (ViewBag.orderBy == "DateRdv" ? arrow : ""), "Index", new { sortString = "DateRdv", asc = futureAsc })
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.NomPrenomProprietaire) + (ViewBag.orderBy == "NomPrenom" ? arrow : ""), "Index", new { sortString = "NomPrenom", asc = futureAsc })
            </th>
            <th>
                État
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateDemande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRDV) @Html.DisplayFor(modelItem => item.HeureRDV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomPrenomProprietaire)
            </td>
            <td>
                <div class="pull-left alert alert-danger" style="height:20px; padding-top:0; margin-bottom:0;"><strong>Demandée</strong></div>
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.RDVID }) |
                @Html.ActionLink("Détails", "Details", new { id = item.RDVID }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.RDVID })
            </td>
        </tr>
    }

</table>
